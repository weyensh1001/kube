apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: ng1
  namespace: argocd
spec:
  project: default
  source:
    path: chart/myapp
    repoURL: git@github.com:weyensh1001/kube.git
    targetRevision: main
    helm:
      releaseName: ng1

  destination:
    server: "https://kubernetes.default.svc"
    namespace: ng1

  syncPolicy:
    syncOptions:
      - CreateNamespace=true

    automated:
      selfHeal: true
      prune: true
